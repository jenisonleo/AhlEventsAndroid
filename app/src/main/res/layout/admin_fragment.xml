<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/admin_flipper">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_info"
            android:layout_centerHorizontal="true"
            android:text="Create new Info"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_event"
            android:layout_below="@id/new_info"
            android:layout_centerHorizontal="true"
            android:text="Create new Event"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_info"
            android:layout_below="@id/new_event"
            android:layout_centerHorizontal="true"
            android:text="Edit existing Info"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_event"
            android:layout_below="@id/edit_info"
            android:layout_centerHorizontal="true"
            android:text="Edit existing Event"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:weightSum="4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="Title"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="24sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="top"
                android:hint="Enter title here"
                android:id="@+id/info_title_editor"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical"
            android:weightSum="4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="Description"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="24sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="top"
                android:hint="Enter description here"
                android:id="@+id/info_description_editor"/>
        </LinearLayout>
        <com.dx.dxloadingbutton.lib.LoadingButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lb_btnText="Add Event"
            app:lb_resetAfterFailed="true"
            app:lb_btnRippleColor="#000000"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/submit_info"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="11">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:weightSum="5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="Title"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="2"
                android:textSize="24sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="top"
                android:hint="Enter title here"
                android:id="@+id/event_title_editor"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Place"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="24sp"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="top"
                android:layout_weight="2"
                android:hint="Enter Place here"
                android:singleLine="true"
                android:id="@+id/event_place_editor"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="From Date"
                android:id="@+id/from_date_picker"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="To Date"
                android:id="@+id/to_date_picker"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="From Time"
                android:id="@+id/from_time_picker"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="To Time"
                android:id="@+id/to_time_picker"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical"
            android:weightSum="8">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="Description"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="24sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:gravity="top"
                android:hint="Enter description here"
                android:id="@+id/event_description_editor"/>
        </LinearLayout>
        <com.dx.dxloadingbutton.lib.LoadingButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lb_btnText="Add Event"
            app:lb_resetAfterFailed="true"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/submit_event"/>

    </LinearLayout>

</ViewFlipper>